{
	"compilerOptions": {
		"module": "ES2015",
		"target": "ES2015",
		"strict": true,
		"esModuleInterop": true,
		"noImplicitOverride": true,
		"skipLibCheck": true,
		"declaration": true,
		"strictNullChecks": false,
		"outDir": "dist",
		"paths": {
			"three": [
				"./types/three.d.ts"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"types/**/*.d.ts"
	],
	"exclude": [
		".git",
		"node_modules",
		"dist"
	]
}